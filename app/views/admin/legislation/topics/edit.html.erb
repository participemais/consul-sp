<% provide :title do %>
  <%= t("admin.header.title") %> - <%= t("admin.menu.legislation") %> - <%= @process.title %> - <%= t("admin.legislation.topics.document.title") %>
<% end %>

<div class="legislation-admin legislation-draft-versions-index">

  <%= back_link_to(
    document_admin_legislation_process_topics_path, t("shared.back")
  ) %>

  <h2><%= @process.title %></h2>

  <%= render "admin/legislation/processes/subnav",
    process: @process, active: "topics"
  %>

  <h2 class="inline-block">
    <%= t("admin.legislation.topics.edit.title") %>
  </h2>

  <%= render 'form',
    url: admin_legislation_process_topic_path(@process, @topic)
  %>

</div>
