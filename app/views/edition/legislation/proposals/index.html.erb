<% provide :title do %>
  <%= t("admin.header.title") %> - <%= t("admin.menu.legislation") %> - <%= @process.title %> - <%= t("admin.legislation.proposals.index.title") %>
<% end %>

<div class="legislation-admin legislation-draft-versions-index">

  <%= back_link_to edition_legislation_processes_path, t("admin.legislation.proposals.index.back") %>

  <h2><%= @process.title %></h2>

  <%= render "edition/legislation/processes/subnav", process: @process, active: "proposals" %>

  <%= render "categories" %>
  <%= render "form" %>

  <%= link_to t("admin.legislation.proposals.index.new_tag"),
	admin_tags_path, class: "inline-block medium-10" if current_user.administrator? %>

  <hr>

  <%= render "proposals", proposals: @proposals %>
</div>
